<Window x:Class="Project.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Admin Dashboard" Width="600" Height="400">
    <StackPanel Margin="20">
        <Label Content="Admin Dashboard" FontSize="18" FontWeight="Bold" />
        <Button x:Name="StudentButton" Content="Student Management" Click="StudentButton_Click" Margin="5"/>
        <Button x:Name="CourseButton" Content="Course Management" Click="CourseButton_Click" Margin="5"/>
        <Button x:Name="InstructorButton" Content="Instructor Management" Click="InstructorButton_Click" Margin="5"/>
        <Button x:Name="EnrollmentButton" Content="Enrollment Management" Click="EnrollmentButton_Click" Margin="5"/>
    </StackPanel>
</Window>
